<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Detalle Empleado"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIniciald"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="NA"
        android:textSize="60sp" />

    <ScrollView
        android:id="@+id/svTest"
        android:layout_width="match_parent"
        android:layout_height="381dp"
        android:layout_below="@+id/tvIniciald">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tvNombred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:hint="Nombre"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/tvApellidoPd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNombred"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:hint="Apellido Paterno"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/tvApellidoMd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvApellidoPd"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-1dp"
                android:gravity="center"
                android:hint="Apellido Materno"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvTituloDocumentod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvApellidoMd"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-1dp"
                android:text="Tipo Documento:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spTipoDocumentod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTituloDocumentod"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-1dp"
                android:background="@android:drawable/btn_dropdown"
                android:contentDescription="Tipo de Documento"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/tvNumeroDocumentod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spTipoDocumentod"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-1dp"
                android:gravity="center"
                android:hint="Numero Documento"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvTituloDistritod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNumeroDocumentod"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="-1dp"
                android:text="Distrito:"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/tvDistritod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTituloDistritod"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="0dp"
                android:background="@android:drawable/btn_dropdown"
                android:contentDescription="Distrito"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/tvDirecciond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDistritod"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:hint="Dirección"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/tvTelefonod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDirecciond"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:hint="Teléfono"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/tvCorreod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTelefonod"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:hint="Correo"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvIdEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IdEmpleado"
                android:textSize="20sp"
                android:visibility="invisible" />


        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="41dp"
        android:text="Insertar" />

    <Button
        android:id="@+id/btnModificar"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="41dp"
        android:layout_toEndOf="@+id/btnInsertar"
        android:text="Modificar" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="41dp"
        android:text="Eliminar" />

</RelativeLayout>